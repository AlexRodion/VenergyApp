<Page x:Class="VenergyApp.Pages.RegisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VenergyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisPage">

    <Grid Background="SteelBlue">
        <Label Content="Введите почту" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="220" Foreground="White"/>
        <TextBox x:Name="emltxt"  HorizontalAlignment="Center" Margin="0,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" Height="24"/>
        <Label Content="Придумайте логин" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="220" Foreground="White"/>
        <TextBox x:Name="lgntxt"  HorizontalAlignment="Center" Margin="0,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" Height="24"/>
        <Label Content="Придумайте пароль" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Height="29" Width="220" Foreground="White"/>
        <PasswordBox x:Name="Pswrdtxt" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="220" Height="22" Margin="0,203,0,0"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Center" Margin="0,238,0,0" VerticalAlignment="Top" Height="29" Width="220" Foreground="White"/>
        <PasswordBox x:Name="rptpswrdtxt" HorizontalAlignment="Center" Margin="0,280,0,0"  VerticalAlignment="Top" Width="220" Height="23"/>
        <Button x:Name="regisbtn" Content="Зарегаться" HorizontalAlignment="Center" Margin="0,358,0,0" FontSize="20" VerticalAlignment="Top" Height="38" Width="220" Click="regisbtn_Click"/>




    </Grid>
</Page>
